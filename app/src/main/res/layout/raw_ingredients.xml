<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/quantity_txt"
                android:text="@string/quantity"
                android:textSize="@dimen/dim20"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim10" />

            <TextView
                android:id="@+id/quantity"
                tools:text="2"
                android:textSize="@dimen/dim20"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_toEndOf="@+id/quantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/quantity_txt"
                android:layout_marginStart="@dimen/dim10" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dim10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/measure_txt"
                android:text="@string/measure"
                android:textSize="@dimen/dim20"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim10" />

            <TextView
                android:id="@+id/measure"
                tools:text="TPS"
                android:textSize="@dimen/dim20"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_toEndOf="@+id/measure_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/measure_txt"
                android:layout_marginStart="@dimen/dim10" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dim10"
            android:layout_marginBottom="@dimen/dim10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ingredients_txt"
                android:text="@string/ingredients"
                android:textSize="@dimen/dim20"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim10" />

            <TextView
                android:id="@+id/ingredients"
                tools:text="Salt"
                android:textSize="@dimen/dim20"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_toEndOf="@+id/ingredients_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ingredients_txt"
                android:layout_marginStart="@dimen/dim10" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>